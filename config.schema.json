{
	"pluginAlias": "Logo-TS",
	"pluginType": "accessory",
	"schema": {
		"type": "object",
		"properties": {
			"name": {
				"title": "Name",
				"type": "string",
				"required": true,
				"default": "Logo Accessory"
			},
			"interface": {
				"title": "Interface to communicate with the LOGO. (modbus or snap7)",
				"type": "string",
				"required": true,
				"default": "modbus"
			},
			"ip": {
				"title": "IP Address",
				"type": "string",
				"required": true,
				"default": ""
			},
			"port": {
				"title": "Modbus Port (required for Modbus)",
				"type": "integer",
				"required": false,
				"default": 505
			},
			"logoType": {
				"title": "LOGO! Type (required for Snap7 => 0BA7, 0BA8, 8.SF4)",
				"type": "string",
				"required": false,
				"default": "8.SF4"
			},
			"localTSAP": {
				"title": "Local TSAP (required for Snap7)",
				"type": "integer",
				"required": false,
				"default": 4608,
				"description": "0x1200 == 4608"
			},
			"remoteTSAP": {
				"title": "Remote TSAP (required for Snap7)",
				"type": "integer",
				"required": false,
				"default": 8704,
				"description": "0x2200 == 8704"
			},
			"type": {
				"title": "Type of Accessory (switch, blind, garagedoor, lightbulb)",
				"type": "string",
				"required": true,
				"default": "switch"
			}
		}
	}
}